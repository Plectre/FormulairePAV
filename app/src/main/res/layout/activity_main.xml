<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    tools:context="formulairepav.plectre.com.formulairepav.view.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_poi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="PAV /POI" />

        <EditText
            android:id="@+id/et_pav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:elevation="0dp"
            android:ems="10"
            android:inputType="textNoSuggestions"
            android:lines="1"
            android:maxLines="1"
            android:nestedScrollingEnabled="false"
            android:padding="8dp"
            android:text="pav" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="CODE" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textNoSuggestions"
            android:lines="1"
            android:maxLines="1"
            android:nestedScrollingEnabled="false"
            android:padding="8dp"
            android:text="code" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_libcolone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="LIB_Col" />

        <EditText
            android:id="@+id/et_libcolone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textNoSuggestions"
            android:lines="1"
            android:maxLines="1"
            android:nestedScrollingEnabled="false"
            android:padding="8dp"
            android:text="lib" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="MatiÃ©re*" />

        <!-- <EditText
            android:id="@+id/et_matiere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:lines="1"
            android:maxLines="1"
            android:nestedScrollingEnabled="false"
            android:padding="8dp"
            android:text="matiere" /> -->

        <Spinner
            android:id="@+id/sp_matiere"
            android:layout_width="214dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Ville*" />

        <EditText
            android:id="@+id/et_ville"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textNoSuggestions"
            android:lines="1"
            android:maxLines="1"
            android:nestedScrollingEnabled="false"
            android:padding="8dp"
            android:text="ville" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Adresse*" />

        <EditText
            android:id="@+id/et_adresse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textNoSuggestions"
            android:lines="1"
            android:padding="8dp"
            android:text="adresse" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_modele"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.71"
            android:gravity="center"
            android:text="Volume*" />

        <RadioGroup
            android:id="@+id/rg_modele"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/rb_2m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:padding="0dp"
                android:text="2.5m3"
                android:textColorLink="@color/colorAccent"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_3m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="3m3"
                android:textColorLink="@color/colorAccent"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_4m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="4m3"
                android:textColorLink="@color/colorAccent"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_5m"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="0dp"
                android:text="5m3"
                android:textColorLink="@color/colorAccent"
                android:textSize="10sp" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Jour de collecte*" />

        <Spinner
            android:id="@+id/sp_jours"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:soundEffectsEnabled="false" />

        <!-- <EditText
             android:id="@+id/et_jdecollecte"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:ems="10"
             android:inputType="textPersonName"
             android:lines="1"
             android:maxLines="1"
             android:nestedScrollingEnabled="false"
             android:padding="8dp"
             android:text="jour de collecte" /> -->
    </LinearLayout>

    <Button
        android:id="@+id/btn_valider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="0dp"
        android:text="Valider" />

</LinearLayout>
